{
	"name": "sing-lang",
	"displayName": "sing lang",
	"description": "sing language plugin",
	"version": "0.0.1",
	"publisher": "mauriziodegirolami",
	"author": {
		"name": "Maurizio De Girolami",
		"email": "mdegirolami@gmail.com"
	},
	"license": "MIT",
	"keywords": [
		"sing ide"
	],
	"engines": {
		"vscode": "^1.44.0"
	},
	"icon": "images/mock-debug-icon.png",
	"categories": [
		"Debuggers",
		"Programming Languages"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-mock-debug.git"
	},
	"bugs": {
		"url": "https://github.com/Microsoft/vscode-mock-debug/issues"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"await-notify": "1.0.1",
		"vscode-debugadapter": "1.40.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"vscode-debugadapter-testsupport": "1.40.3",
		"tslint": "5.18.0",
		"vsce": "1.74.0"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onLanguage:singlang",
		"onDebug",
		"onDebugDynamicConfigurations",
		"onCommand:extension.sing-lang.getProgramName",
		"onCommand:helloworld.helloWorld"
	],
	"contributes": {
		"languages": [{
			"id": "singlang",
			"aliases": ["sing"],
			"extensions": [".sing"],
			"configuration": "./language-configuration.json"
		}],
		"grammars": [{
			"language": "singlang",
			"scopeName": "source.sing",
			"path": "./syntaxes/singlang.tmLanguage.json"
		}],
		"commands": [
			{
				"command": "helloworld.helloWorld",
				"title": "Hello Degi World"
			}
		],
		"breakpoints": [
			{
				"language": "singlang"
			}
		],
		"debuggers": [
			{
				"type": "sing",
				"label": "Sing Debugger",
				"program": "./out/debugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceFolder}/${command:AskForProgramName}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "sing",
						"request": "launch",
						"name": "Ask for file name",
						"program": "${workspaceFolder}/${command:AskForProgramName}",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "Sing Debugger: Launch",
						"description": "A new configuration for 'debugging' the current sing project.",
						"body": {
							"type": "sing",
							"request": "launch",
							"name": "Ask for file name",
							"program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
							"stopOnEntry": true
						}
					}
				],
				"variables": {
					"AskForProgramName": "extension.mock-debug.getProgramName"
				}
			}
		]
	}
}
